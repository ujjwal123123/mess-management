doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Mess Management
    link(
      rel="stylesheet",
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    )
    link(rel="stylesheet", href="/css/custom.css")
    link(
      rel="stylesheet",
      href="https://unpkg.com/tabulator-tables@4.9.3/dist/css/tabulator.min.css"
    )
  body
    //- TODO: move navbar code to a separate file
    block navbar
      nav.navbar.is-info(role="navigation", aria-label="main navigation")
        .container
          .navbar-brand
            a.navbar-item.is-size-4(href="/") Mess Management
            a.navbar-burger(
              role="button",
              aria-label="menu",
              aria-expanded="false",
              data-target="navbarCollapsible"
            )
              span(aria-hidden="true")
              span(aria-hidden="true")
              span(aria-hidden="true")
          #navbarCollapsible.navbar-menu
            .navbar-end
              //- TODO: apply `is-active` class depending on the page user is on
              if userName
                a.navbar-item(href="/") Home
                a.navbar-item(href="/student") Students
                a.navbar-item(href="/semester") Semesters
                a.navbar-item(href="/rate") Rate
                .navbar-item.has-dropdown.is-hoverable
                  a.navbar-link #{ userName }
                  .navbar-dropdown
                    a.navbar-item(href="/settings") Profile
                    a.navbar-item(href="/logout") Logout

    script(src="/js/navbar.js")
    script(
      src="https://unpkg.com/tabulator-tables@4.9.3/dist/js/tabulator.min.js"
    )

    main.container
      section.section
        block content
